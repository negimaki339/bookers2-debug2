            <table>
            <p>コメント件数：<%= book.book_comment.count %></p>
            <% book.book_comment.each do |book_comment| %>
            <tr>
    	       <td>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <%= book_comment.user.name %>
              </td>
              <td>
              <%= book_comment.created_at.strftime('%Y/%m/%d') %>
              <%= book_comment.comment %></td>
              <% if book_comment.user == current_user %>
              
                  <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
                
              <% end %>
                </tr>
            <% end %>
            </table>